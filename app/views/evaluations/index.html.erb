<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New Evaluation", new_evaluation_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
       <% @evaluations.each do |evaluation| %>
         
         <tr>
             <td><%= evaluation.name %></td>
             <td><%= link_to "Download Evaluation", evaluation.attachment_url %></td>
             <td><%= button_to "Delete",  evaluation, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{evaluation.name}?" %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>
