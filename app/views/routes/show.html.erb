<h2 align="center">Route: <%= @route.name %></h2>
    <div class="well col-xs-8 col-xs-offset-2">
        <h4 class="center description"><strong>Description:</strong></h4>
                <%= @route.description %>
        <h4>Grade: <%= @route.grade %>  
        length: <%= @route.length %>'  
        Protection: <%= @route.gear %>  
        FA: <%= @route.fa %>  
        Established: <%= @route.date %></h4>
        
        
        <% if @route.cliffs.any? %>
            <p>Cliff: <%= render @route.cliffs %></p>
        <% end %>
        <div class="route-actions">
            <% if logged_in? && current_user.admin? %>
                <%= link_to "Delete this route", route_path(@route), method: :delete,
                data: { confirm: "Are you sure you want to delete the route?"},
                class: "btn btn-xs btn-danger" %>
            <% end %>
            <%= link_to "Edit this route", edit_route_path(@route), class: "btn btn-xs btn-primary" %>
            <%= link_to "View all routes", routes_path, class: "btn btn-xs btn-success" %>
        </div>
    </div>
