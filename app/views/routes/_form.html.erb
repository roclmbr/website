<%= render 'shared/errors', obj: @route %>

    <%= form_for(@route, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :name %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :name, class: "form-control", placeholder: "Route name", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :description %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :description, class: "form-control", placeholder: "Route description", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :grade %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :grade, class: "form-control", placeholder: "Route grade", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :length %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :length, class: "form-control", placeholder: "Route length", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :gear %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :gear, class: "form-control", placeholder: "Protection", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :fa %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :fa, class: "form-control", placeholder: "First Ascentionist", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :date %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :date, class: "form-control", placeholder: "Route established", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-offset-2 col-sm-8">
                    <%= f.collection_check_boxes :cliff_ids, Cliff.all, :id, :name do |cb| %>
                    <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
    <% end %>
  <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Cancel request and return to routes listing", routes_path %> ]
</div>