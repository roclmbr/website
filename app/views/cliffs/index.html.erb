<h1 align="center">Listing All Cliffs</h1>

<div align="center">
    
    <%= will_paginate %>

    <% @cliffs.each do |cliff| %>

        <ul class="listing">

            <div class="row">

                <div class="well col-md-4 col-md-offset-4">

                    <li class="article-title">

                        <%= link_to "#{cliff.name}", cliff_path(cliff) %>

                    </li>
                    <li><small><%= pluralize(cliff.routes.count, "route") %></small></li>

                </div>

            </div>

        </ul>

    <% end %>
    <%= will_paginate %>

</div>